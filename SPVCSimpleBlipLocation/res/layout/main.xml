<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<Button android:layout_height="wrap_content" android:text="Start Server"
		android:layout_width="fill_parent" android:onClick="startServer"
		android:id="@+id/StartServerButton"></Button>
	<Button android:layout_height="wrap_content"
		android:layout_width="fill_parent" android:text="Select server device"
		android:onClick="selectServerDevice" android:id="@+id/SelectDeviceButton"></Button>
	<Button android:layout_height="wrap_content" android:id="@+id/StopServerButton"
		android:text="Stop server" android:layout_width="fill_parent"
		android:visibility="invisible" android:onClick="stopServer"></Button>

	<Button android:text="Update" android:id="@+id/UpdateButton"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:onClick="startDiscovery"></Button>
	<TextView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:id="@+id/MyBlipLocationTextView" />
	<ListView android:id="@+id/UpdatesListView"
		android:layout_width="wrap_content" android:layout_height="wrap_content"></ListView>

</LinearLayout>
